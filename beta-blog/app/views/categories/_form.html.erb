<div class="row">
  <div class="col-xs-12">
    <%= form_for @category, :html => {class: "form-horizontal", role: "form"} do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
      
        <%= f.label :name %><br />
      </div>
      <div class="col-sm-10">
          <%= f.text_field :name, class: "form-control", placeholder: "Title of category", autofocus: true %>
      </div>
     </div>
    </div>
  </div>

    <% end %>
  <div class="col-xs-4 col-xs-offset-4">
    [<%= link_to "Cancel and go back to all Categories", categories_path %>]
  </div>
  </div>
</div>

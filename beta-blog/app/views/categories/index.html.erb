<h1 align="center">Listing all Categories</h1>

<div align="center">
    <%= will_paginate %>
    <% @categories.each do |category| %>
        <ul class='listing'>
            <div class="well col-md-4 col-md-offset-4">
                <li class="topic-title">
                    <%= link_to category.name, category_path(category)%>
                </li>
            </div>
        </ul>
    <% end %>

</div>
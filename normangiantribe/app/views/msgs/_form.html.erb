<%= render 'shared/errors', obj: @msg %>

<%= form_for @msg, :html => {class: "form-horizontal", role: "form"} do |f| %>
    <div class="form-group">
        <%= f.label :title %><br />
        <%= f.text_field :title, class: "form-control", placeholder: "Title of Post", autofocus: true %>
    </div>
    <div class="form-group">
        <%= f.label :body %><br />
        <%= f.text_area :body, rows: 10, class: "form-control", placeholder: "Body of post" %>
    </div>
        
    <div class="form-group">
        <%= f.submit class: "btn btn-primary btn-lg" %>
    </div>
<% end %>
[<%= link_to "Cancel and go back to All Posts", msgs_path %>]


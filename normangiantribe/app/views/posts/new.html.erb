<%= render 'shared/errors', obj: @post %>
<div class="row">
  <div class="col-xs-12">
    <%= form_for @post, :html => {class: "form-horizontal", role: "form"} do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
      
        <%= f.label :title %><br />
      </div>
      <div class="col-sm-10">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of post", autofocus: true %>
      </div>
     </div>
     <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, rows: 10 , placeholder: "Body of post" %>
      </div>
        
      <div class="form-group">
          <%= f.submit class: "btn btn-primary btn-lg" %>
      </div>
    </div>
  </div>

    <% end %>
    [<%= link_to "Cancel and go back to all posts", posts_path %>]
  </div>
</div>

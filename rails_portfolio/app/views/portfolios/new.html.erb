

    <%= form_for @portfolio, :html => { role: "form"} do |f| %>

      
        <%= f.label :title %><br />
        <%= f.text_field :title, placeholder: "Title of article", autofocus: true %>
        <%= f.label :description %>
        <%= f.text_area :description, rows: 10, placeholder: "Body of article" %>
        <%= f.submit class: "btn btn-primary btn-lg" %>
        
    <% end %>

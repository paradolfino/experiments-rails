

    <%= form_for @portfolio, :html => { role: "form"} do |f| %>

      
        <%= f.label :title %><br />
        <%= f.text_field :title, placeholder: "Title of portfolio", autofocus: true %>
        <%= f.label :subtitle %><br />
        <%= f.text_field :subtitle, placeholder: "Subtitle of portfolio", autofocus: true %>
        <%= f.label :body %>
        <%= f.text_area :body, rows: 10, placeholder: "Body of portfolio" %>
        <%= f.submit %>
        
    <% end %>

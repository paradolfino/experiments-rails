

    <%= form_for @portfolio, :html => { role: "form"} do |f| %>

      
        <%= f.label :title %><br />
        <%= f.text_field :title, placeholder: "Title of portfolio", autofocus: true %><br />
        <%= f.label :subtitle %><br />
        <%= f.text_field :subtitle, placeholder: "Subtitle of portfolio", autofocus: true %><br />
        <%= f.label :body %><br />
        <%= f.text_area :body, rows: 10, placeholder: "Body of portfolio" %><br />
        <%= f.submit %><%= link_to "Back to All Portfolios", portfolios_path %><br />
        
    <% end %>
